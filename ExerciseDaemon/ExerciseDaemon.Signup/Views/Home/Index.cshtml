@model ExerciseDaemon.Signup.Models.AthleteViewModel

@{
    ViewData["Title"] = "Exercise Daemon";
}

@if (!User.Identity.IsAuthenticated)
{
    <p class="lead">Connect your Strava account to get motivated to exercise during lockdown!</p>
    <div class="row">
        <div class="col-lg-12">
            <div class="jumbotron">
                <div style="margin: 0 auto; width: 600px; text-align: center;">
                    <a class="strava-connect" asp-controller="Strava" asp-action="Connect">
                        <img src="/images/btn_strava_connectwith_orange.png" />
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p class="lead">You're connected! Woo!</p>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Athlete</div>
                <div class="panel-body">
                    <p><strong>@Model.Name</strong> &ndash; Joined Strava on : @Model.StravaJoinDate.ToString("D")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Latest Activities</div>
                <div class="panel-body">
                    @foreach (var activity in Model.Activities.OrderByDescending(a => a.StartDateLocal))
                    {
                        <p><strong>@activity.Type</strong> &ndash; @activity.StartDateLocal.ToString("f")</p>
                    }
                </div>
            </div>
        </div>
    </div>
}